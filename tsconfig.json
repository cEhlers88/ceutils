{
  "compilerOptions": {
    "module": "es6",
    "target": "esnext",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist/",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__root__/*",
    "**/__tests__/*"
  ]
}
