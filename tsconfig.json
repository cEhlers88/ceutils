{
  "compilerOptions": {
    "module": "es6",
    "target": "esnext",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
  },
  "include": [
    "src",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/doc/*",
    "**/__root__/*",
    "**/__tests__/*"
  ]
}